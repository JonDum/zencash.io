discord = "\e900"
arrow-down = "\ea3e"
circle-down = "\ea43"
facebook = "\ea91"
twitter = "\ea96"
youtube = "\ea9d"
github = "\eab0"
reddit = "\eac6"


@font-face
	font-family 'icons'
	src url('fonts/icons.eot?4modug')
	src url('fonts/icons.eot?4modug#iefix') format('embedded-opentype'), url('fonts/icons.ttf?4modug') format('truetype'), url('fonts/icons.woff?4modug') format('woff'), url('fonts/icons.svg?4modug#icons') format('svg')
	font-weight normal
	font-style normal

icon
	display inline-block
	font-family 'icons' !important
	vertical-align middle
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1

	/* Better Font Rendering =========== */
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

	&.discord:before
		content discord
	&.arrow-down:before
		content arrow-down
	&.circle-down:before
		content circle-down
	&.facebook:before
		content facebook
	&.twitter:before
		content twitter
	&.youtube:before
		content youtube
	&.github:before
		content github
	&.reddit:before
		content reddit

