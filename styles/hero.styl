
#hero
	padding 9em 0 1em 0
	position relative
	color #fff
	overflow hidden

	> .container
		position relative
		z-index 10
		text-align center

	video, canvas
		width 100%
		height 100%
		object-fit cover
		@extend .fit

	canvas
		z-index 3
		

	&:after
		@extend .fit
		content ''
		position absolute
		width 100%
		height 100%
		background linear-gradient(-30deg, fade-out(#0e0a4a, 0.1), fade-out(#0E95AA, 0.1))
		z-index 5

	h1
		margin 0
		font-size 4em
		line-height 1
		margin-bottom 1rem
		span
			font-weight 400

	p
		opacity 0.7
		font-size 1.2em
		max-width 320px
		margin auto

	.cta
		border 1px solid #fff
		border-radius 99px
		padding 0.5em 1em
		margin-top 3em
		display inline-block
		overflow hidden
		position relative

		span
			display block
			transition 0.3s ease
			transform translate(0, 0)

		> icon
			position absolute
			left 50%
			top 50%
			transition 0.3s ease
			transform translate(-50%, -250%)

		&:hover
			span
				transform translate(0, 150%)
			icon
				transform translate(-50%, -50%)

		&:hover
			background fade-out(#fff, 0.95)

	.social
		margin-top 9em
		a ~ a
			margin-left 2em


			
